# Environment Configuration for CivicMind AI Framework
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith Configuration (Optional - for tracing and debugging)
LANGSMITH_API_KEY=your_langsmith_api_key_here

# Model Configuration
CIVICMIND_MODEL=gpt-4o
CIVICMIND_TEMPERATURE=0.1

# Server Configuration
CIVICMIND_HOST=0.0.0.0
CIVICMIND_PORT=8000
CIVICMIND_RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/civicmind
REDIS_URL=redis://localhost:6379

# Vector Store Configuration
VECTOR_STORE_TYPE=chroma
VECTOR_STORE_PATH=./data/vectorstore

# Civic Data APIs
CIVIC_APIS=seeclickfix,openstates,google_civic

# Security
SECRET_KEY=your-very-secure-secret-key-change-this-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Feature Flags
ENABLE_COMMUNITY_RESOLUTION=true
ENABLE_MULTIMODAL=true
ENABLE_VOICE_INPUT=false

# Logging
LOG_LEVEL=INFO

# Optional: Civic API Keys
SEECLICKFIX_API_KEY=your_seeclickfix_api_key
GOOGLE_CIVIC_API_KEY=your_google_civic_api_key
OPENSTATES_API_KEY=your_openstates_api_key

# Optional: Deployment Configuration
DOCKER_TAG=civicmind:latest
KUBERNETES_NAMESPACE=civicmind
